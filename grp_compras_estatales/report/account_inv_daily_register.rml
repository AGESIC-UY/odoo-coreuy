  <images/>
  <story>
     <blockTable colWidths="200.0,200.0,130.0" style="Table1">
      <tr>
        <td>
          <image x="1.0cm" y="1.0cm" width="150" height="35">[[company.header_image[0].img or removeParentNode('image')]]</image>
        </td>
        <td>
        </td>
        <td>
          <image x="1.0cm" y="1.0cm" width="80" height="35">[[company.logo or removeParentNode('image')]]</image>
        </td>
      </tr>
    </blockTable>
    <blockTable style="Table1" colWidths="300.0,200.0">
      <tr>
        <td>
          <para style="terp_header_Centre_10">LISTADO DE FACTURAS POR DIA</para>
        </td>
        <td></td>
      </tr>
    </blockTable>
    <blockTable style="Table1">
      <tr>
        <td>
            <para style="P7">
               Emisión: [[ get_today_date(data['form'])]]
            </para>
