    <para style="Standard">
        <font color="white"> </font>
    </para>
    <para style="Standard">
        <font color="white"> </font>
    </para>
    <section>
      <para style="terp_default_8">[[repeatIn(get_lines(data['form']), 'a')]]</para>
      <blockTable rowHeights="0.55cm" colWidths="70.0,100.0,60.0,60.0,70.0,70.0,70.0">
        <tr>
          <td><para style="P4"> [[ a.get('orden_compra') ]]</para></td>
          <td><para style="P4"> [[ a.get('proveedor') ]]</para></td>
          <td><para style="P4"> [[ a.get('invoice_number') ]]</para></td>
          <td><para style="P4"> [[ formatLang(a.get('date_invoice'), date=True) or '' ]]</para></td>
          <td><para style="P5"> [[ a.get('amount_pesos') > 0 and formatLang(a.get('amount_pesos',0.0), currency_obj = a.get('currency_base')) or formatLang(0, digits=0)]]</para></td>
          <td><para style="P5"> [[ a.get('amount_divisa') > 0 and formatLang(a.get('amount_divisa',0.0), currency_obj = a.get('currency_id')) or formatLang(0, digits=0)]]</para></td>
          <td><para style="P4"> [[ a.get('nro_interno') ]]</para></td>
        </tr>
        <tr></tr>
