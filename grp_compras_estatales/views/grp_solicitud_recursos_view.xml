                        </group>
                        <group colspan="6">
                            <group>
                                <field name="inciso" readonly="1" invisible="1"/>
                            </group>
                            <group>
                                <field name="u_e" readonly="1" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Solicitud">
