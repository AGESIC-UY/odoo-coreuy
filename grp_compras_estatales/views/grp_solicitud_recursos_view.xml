                                <field name="aprobador_editable" invisible="True"/>
                                <field name="almacenero_editable" invisible="True"/>
                                <field name="lineas_readonly" invisible="1"/>
                                <!-- Agregado cambios de tipo sr, de PCARBALLO, 14/03-->
